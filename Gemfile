group :development do
  gem 'rspec', '~> 2.11'
  gem 'rdoc', '~> 3.12'
  gem 'bundler', '~> 1.0'
  gem 'jeweler', '~> 1.8.4'

  # rcov only works with Ruby 1.8
  gem 'rcov', '>= 0', :platforms => :mri_18
